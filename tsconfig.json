{
	"compilerOptions": {
		"baseUrl": ".",
		"downlevelIteration": true,
		"esModuleInterop": true,
		"incremental": true,
		"module": "esnext",
		"moduleResolution": "node",
		"noEmit": true,
		"outDir": "dist",
		"paths": {
			"@lib": ["src/lib"],
			"@typings/*": ["src/typings/*"],
			"@utils": ["src/utils"]
		},
		"skipLibCheck": true,
		"strict": false, // Enabled only for src
		"target": "ES5",
		"typeRoots": ["src/typings", "node_modules/@types"],
		"plugins": [
			{
				"name": "typescript-strict-plugin",
				"paths": ["src"]
			}
		]
	},
	"ts-node": {
		"compilerOptions": {
			"module": "commonjs"
		}
	}
}
